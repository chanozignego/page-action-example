{
  "manifest_version": 2,

  "name": "Page action example",
  "description": "This extension change the background color of Twitter",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Change your Twitter color!"
  },

  "permissions": [
    "declarativeContent",
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]
}
